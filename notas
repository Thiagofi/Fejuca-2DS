nota_1 = int(input("digite a nota 1"))
nota_2 = int(input("digite a nota 2"))
nota_3 = int(input("digite a nota 3"))

resultado = (nota_1 + nota_2 + nota_3)
media= (resultado /3)
print (f"resultado da media{media}")


cidades = []

for i in range(3):
    c = input("digite o nome da cidade que deseja cadastrar")
    cidades.append(c)
    print(cidades)


def menu():
    print('Olá mundo; \nEu programo em Python; \nLaços de repetição')
    
    while True:
        choice = int(input('Digite uma das três opções: 1/2/3)'))
        
        var = 0
        if choice == 1:
            var = 1
            print(f'Você digitou {var} que equivale há Olá mundo')
            
        elif choice == 3:
            var = 3
            print(f'Você digitou {var} que equivale há Laços de repetição')
            
        else:
            print('Opção inválida!!! \n')
            
            menu()
            
menu()
